#!/usr/bin/env bash
"""a Bash script that configures an Ubuntu server with the below requirements."""
# Define the hosts file path
hosts_file="/etc/hosts"

# Backup the current hosts file
cp $hosts_file $hosts_file.bak

# Add or update localhost entry
echo "127.0.0.2 localhost" | sudo tee -a $hosts_file > /dev/null

# Add or update facebook.com entry
echo "8.8.8.8 facebook.com" | sudo tee -a $hosts_file > /dev/null

echo "Hosts file configured successfully!"
